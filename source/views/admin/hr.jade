extends includes/base

block title
  title= title

block css
  link(rel='stylesheet', href='/stylesheets/admin.css')
  link(rel='stylesheet', href='/stylesheets/fontawesome.css')
  link(rel='stylesheet', href='/stylesheets/common/wysihtml5.css')
  <!--[if lt IE 9]>
  link(rel='stylesheet', href='/stylesheets/ie.css')
  <![endif]-->

block page 
  div.page
    include includes/header
    include includes/nav
    .container
      .content
        p.total 编辑招聘文案
          small(style="padding-left:20px;color:#888")
        br
        form(method="POST", action="/admin/hr")
          input(type="hidden", name="_id", value="#{hr._id}")
          textarea.textarea(placeholder='Enter text ...', name="content" style='width: 100%; min-height: 400px;') #{hr.content}
          p(style="padding-top: 30px;")
            button.btn.btn-primary(type="submit") #{btnText}招聘信息

block js
  script(src='/sea-modules/seajs/seajs/2.1.1/sea.js')
  script(src='/sea-modules/seajs/seajs-text/1.0.2/seajs-text.js')
  script(src='/javascripts/common/config.js')
  script seajs.use('/javascripts/src/hr.js')
