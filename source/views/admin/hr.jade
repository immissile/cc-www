extends includes/base

block title
  title= title

block css
  link(rel='stylesheet', href='/stylesheets/admin.css')
  link(rel='stylesheet', href='/stylesheets/fontawesome.css')
  link(rel='stylesheet', href='/stylesheets/editor.css')
  <!--[if lt IE 9]>
  link(rel='stylesheet', href='/stylesheets/ie.css')
  <![endif]-->

block page 
  div.page
    include includes/header
    include includes/nav
    .container
      .content
        p.total 编辑招聘文案
          small(style="padding-left:20px;color:#888") 暂时不能用，还没做好
        br
        div.btn-toolbar(data-role='editor-toolbar', data-target='#editor')
          .btn-group
            a.btn.dropdown-toggle(data-toggle='dropdown', title='', data-original-title='Font Size')
              i.fa.fa-text-height
              b.caret
            ul.dropdown-menu
              li
                a(data-edit='fontSize 5')
                  font(size='5') Huge
              li
                a(data-edit='fontSize 3')
                  font(size='3') Normal
              li
                a(data-edit='fontSize 1')
                  font(size='1') Small

          div.btn-group
            a.btn(data-edit='bold', title='', data-original-title='Bold (Ctrl/Cmd+B)')
              i.fa.fa-bold
            a.btn(data-edit='italic', title='', data-original-title='Italic (Ctrl/Cmd+I)')
              i.fa.fa-italic


          div.btn-group
            a.btn(data-edit='insertunorderedlist', title='', data-original-title='Bullet list')
              i.fa.fa-list-ul
            a.btn(data-edit='insertorderedlist', title='', data-original-title='Number list')
              i.fa.fa-list-ol
            a.btn(data-edit='outdent', title='', data-original-title='Reduce indent (Shift+Tab)')
              i.fa.fa-outdent
            a.btn(data-edit='indent', title='', data-original-title='Indent (Tab)')
              i.fa.fa-indent


        #editor
          p(style="color:#999") 输入文案...
        form(method="POST", action="/admin/hr")

block js
  script(src='/sea-modules/seajs/seajs/2.1.1/sea.js')
  script(src='/sea-modules/seajs/seajs-text/1.0.2/seajs-text.js')
  script(src='/javascripts/common/config.js')
  script seajs.use('/javascripts/src/hr.js');

